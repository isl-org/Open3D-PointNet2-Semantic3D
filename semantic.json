{
    "gpu": "0",
    "logdir": "log/semantic",
    "data_path": "dataset/semantic_downsampled/",

    "max_epoch": 500,
    "num_point": 8192,
    "batch_size": 16,
    "use_color": 1,

    "optimizer": "adam",
    "momentum": 0.9,
    "learning_rate": 0.001,
    "decay_step": 200000,
    "learning_rate_decay_rate": 0.7,

    "box_size_x": 10,
    "box_size_y": 10,
    "bn_init_decay": 0.5,
    "bn_decay_decay_rate": 0.5,
    "bn_decay_clip": 0.99,

    "l1_radius": 0.5,
    "l1_nsample": 32,
    "l1_npoint": 1024,

    "l2_radius": 1.0,
    "l2_nsample": 32,
    "l2_npoint": 256,

    "l3_radius": 2.0,
    "l3_nsample": 32,
    "l3_npoint": 64,

    "l4_radius": 4.0,
    "l4_nsample": 32,
    "l4_npoint": 16
}
